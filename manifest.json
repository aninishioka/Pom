{
    "manifest_version": 3,
    "name": "Pom",
    "version": "1.0",
    "description": "Pomodoro timer",

    "action": {
        "default_timer": "Pom",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/off_16.png"
        }
    },
    
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "alarms", "notifications"]
}